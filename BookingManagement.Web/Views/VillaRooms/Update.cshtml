@model VillaRoomsVM

<div class="container my-5">
    <div class="card-header bg-success bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Update Room</h2>
            </div>
        </div>
    </div>
    <div class="card-body border p-4">
        <form method="post" class="row">
            @Html.AntiForgeryToken()
            <div class="p-4">
                <div class="form-floating py-1 col-12">
                    <select asp-for="VillaRooms.VillaId" asp-items="Model.VillaList" class="form-control border show">
                        <options value="">--select Villa--</options>
                    </select>
                    <label asp-for="VillaRooms.VillaId" class="ms-2"></label>
                    <span asp-validation-for="VillaRooms.VillaId" class="text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="VillaRooms.Villa_RoomId" class="form-control border show">
                    <label asp-for="VillaRooms.Villa_RoomId" class="ms-2"></label>
                    <span asp-validation-for="VillaRooms.Villa_RoomId" class="text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="VillaRooms.SpecialDetails" class="form-control border show">
                    <label asp-for="VillaRooms.SpecialDetails" class="ms-2"></label>
                    <span asp-validation-for="VillaRooms.SpecialDetails" class="text-danger"></span>
                </div>
            </div>
            <div class="row pt-2">
                <div class="col-6 text-center py-3">
                    <button type="submit" class="btn btn-primary w-100">Save</button>
                </div>
                <div class="col-6 text-center py-3">
                    <a asp-controller="VillaRooms" asp-action="Index" class="btn btn-secondary w-100">Cancel</a>
                </div>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}